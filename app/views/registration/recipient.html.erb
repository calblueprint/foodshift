<form data-abide>

<div id="recipient-form-info-block">
    <div class="row">
        <div class="small-12 medium-8 medium-centered columns">
            <h3 class="text-center block-title">About You</h3>
            <div class="row collapse">
                <div class="small-3 medium-2 columns">
                    <span class="prefix">First name</span>
                </div>
                <div class="small-9 medium-4 columns">
                    <input type="text" required />
                    <small class="error">First name is required.</small>
                </div>
                <div class="small-3 medium-2 columns">
                    <span class="prefix">Last name</span>
                </div>
                <div class="small-9 medium-4 columns">
                    <input type="text" required/>
                    <small class="error">Last name is required.</small>
                </div>
            </div>
            <div class="row collapse">
                <div class="small-3 columns">
                    <span class="prefix">Email</span>
                </div>
                <div class="small-9 columns">
                    <input type="email" required/>
                    <small class="error">Valid email is required.</small>
                </div>
            </div>
            <div class="row collapse">
                <div class="small-3 columns">
                    <span class="prefix">Phone</span>
                </div>
                <div class="small-9 columns">
                    <input type="tel" pattern="phone" required/>
                    <small class="error">Valid phone number is required.</small>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="recipient-form-org-block">
    <div class="row">
        <div class="small-12 medium-8 medium-centered columns">
            <h3 class="text-center block-title">About Your Organization</h3>
            <div class="row collapse">
                <div class="small-3 columns">
                    <span class="prefix">Name</span>
                </div>
                <div class="small-9 columns">
                    <input type="text" required/>
                    <small class="error">Organization name is required.</small>
                </div>
            </div>
            <div class="row collapse">
                <div class="small-3 columns">
                    <span class="prefix">Address</span>
                </div>
                <div class="small-9 columns">
                    <input type="text" placeholder="" required id="recipient-address" />
                    <small class="error">Valid address is required.</small>
                </div>
            </div>
            <div class="row collapse">
                <div class="small-3 columns">
                    <span class="prefix">501(c)(3) Number</span>
                </div>
                <div class="small-9 columns">
                    <input type="text" required/>
                    <small class="error">501(c)(3) number is required.</small>
                </div>
            </div>
            <div class="row">
                <div class="small-12 medium-6 columns">
                    <input id="checkbox-kitchen" type="checkbox"/><label for="checkbox-kitchen">Do you have a kitchen?</label>
                </div>
                <div class="small-12 medium-6 columns">
                    <input id="checkbox-refrigeration" type="checkbox"/><label for="checkbox-refrigeration">Do you have refrigeration?</label>
                </div>
            </div>
            <div class="row form-padding-top">
                <div class="small-12 columns">
                    <div class="text-center signup-block">
                        <a id="submit" class="success-button">Sign up</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

</form>

<%= javascript_include_tag "application/recipient_form" %>
